{
  "name": "fitlink-apps",
  "version": "0.0.2",
  "description": "Fitlink monorepo",
  "author": "Fitlink",
  "private": true,
  "scripts": {
    "build": "nest build",
    "build:migrate": "nest build -c nest-cli.migrate.json",
    "build:jobs": "nest build -c nest-cli.jobs.json",
    "prebuild": "rimraf dist",
    "start": "nest start --watch",
    "start:jest": "cross-env DB_PASSWORD=jest DB_USERNAME=jest DB_DATABASE_NAME=jest DB_PORT=5433 PORT=3001 nest start --watch --webpack",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "apps:start": "yarn run concurrently \"yarn:package:*\"",
    "test": "jest --config ./apps/api/test/jest-e2e.config.js --runInBand",
    "test:watch": "jest --config ./apps/api/test/jest-e2e.config.js --watch",
    "test:generate-jwt": "node ./scripts/generate-jwt.js ./config.jwt.json",
    "test:sdk": "jest --config ./apps/api-sdk/jest.sdk.config.js api.spec.ts",
    "test:admin": "yarn workspace @fitlink/admin test",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "db:diagram": "ts-node --project apps/api/tsconfig.uml.json ./node_modules/typeorm-uml/bin/run ./ormconfig.js --download=docs/uml.svg --format=svg --with-enum-values",
    "db:export": "docker exec -t postgres pg_dumpall -c -U fitlink > fitlink.sql",
    "db:export:jest": "docker exec -t postgres-jest pg_dumpall -c -U jest > jest.sql",
    "db:import": "docker exec -i postgres psql -U fitlink < fitlink.sql",
    "db:import:uat": "docker exec -i postgres psql -U fitlink < fitlink.sql",
    "db:import:jest": "docker exec -i postgres-jest psql -U jest < jest.sql",
    "migration:show": "node scripts/check-migrations.js",
    "migration:run": "yarn run typeorm migration:run -f ./ormconfig.js",
    "migration:revert": "yarn run typeorm migration:revert -f ./ormconfig.js",
    "migration:initialize": "yarn run typeorm migration:generate -n InitializeSchema -f ./ormconfig.js -d apps/api/database/migrations",
    "migration:generate": "node scripts/generate-migration.js",
    "migration:seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "migration:seed:test-users": "cross-env TEST_SEED=1 yarn run migration:seed --seed CreateTestUsers",
    "migration:seed:sports": "yarn run migration:seed --seed CreateSports",
    "sls:offline:start": "cross-env API_PREFIX=\"api/v1\" && sls offline start",
    "sls:deploy": "cross-env NODE_ENV=production && serverless deploy --alias default",
    "sls:deploy:production": "cross-env NODE_ENV=production && serverless deploy --stage production --alias default",
    "sls:package": "serverless package",
    "sls:migrate": "serverless invoke -f migrate",
    "sls:migrate:production": "serverless invoke -f migrate --stage production",
    "sls:secrets": "node ./scripts/update-secrets.js",
    "package:admin": "yarn workspace @fitlink/admin dev",
    "package:admin:ssl": "cross-env DEV_SSL=1 yarn workspace @fitlink/admin ssl",
    "package:api": "nest start --watch",
    "package:storybook": "yarn workspace @fitlink/storybook dev",
    "build-package:admin": "yarn workspace @fitlink/admin build",
    "build-package:api": "nest build -c nest-cli.serverless.json --webpack --webpackPath webpack-serverless.config.js",
    "build-package:storybook": "yarn workspace @fitlink/storybook build",
    "docs:generate": "@compodoc/compodoc -p tsconfig.json -s",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "firebase:migration:jest": "cross-env DB_PASSWORD=jest DB_USERNAME=jest DB_DATABASE_NAME=jest DB_PORT=5433 ts-node ./apps/api/database/firebase/migrate.ts",
    "firebase:migration": "cross-env MIGRATION=firebase ts-node ./apps/api/database/firebase/migrate.ts",
    "ssl:generate": "openssl genrsa -out root.key 4096 && openssl req -x509 -new -nodes -key root.key -sha256 -days 1024 -out root.crt",
    "test:timezones": "ts-node ./apps/common/date/test.ts"
  },
  "workspaces": {
    "packages": [
      "apps/*"
    ]
  },
  "dependencies": {
    "@fitlink/common": "*",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "ts-jest": "26.5.2"
  }
}
